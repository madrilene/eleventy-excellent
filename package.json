{
  "name": "eleventy-excellent",
  "version": "3.3.0",
  "description": "Personal developer blog based on the eleventy-excellent theme.",
  "author": "Rigoberto L. Perez",
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=20.x.x"
  },
  "scripts": {
    "clean": "rimraf dist src/_includes/css src/_includes/scripts",
    "favicons": "node ./src/_config/setup/generate-favicons.js",
    "screenshots": "node ./src/_config/setup/generate-screenshots.js",
    "dev:clean": "rimraf src/assets/og-images",
    "dev:11ty": "cross-env ELEVENTY_ENV=development eleventy --serve --watch",
    "build:11ty": "cross-env ELEVENTY_ENV=production eleventy",
    "start": "run-p dev:*",
    "build": "run-s clean build:*"
  },
  "keywords": ["blog", "11ty"],
  "repository": {
    "type": "git",
    "url": "https://github.com/rlperez/rlperez.github.io.git"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0-beta.1",
    "@11ty/eleventy-fetch": "^4.0.1",
    "@11ty/eleventy-img": "^4.0.2",
    "@11ty/eleventy-plugin-rss": "^2.0.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@11ty/eleventy-plugin-webc": "^0.11.2",
    "@11ty/is-land": "^4.0.0",
    "hcaptcha": "^0.2.0",
    "lite-youtube-embed": "^0.3.3"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.10",
    "@tailwindcss/forms": "^0.5.9",
    "@toycode/markdown-it-class": "^1.2.4",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "esbuild": "^0.23.1",
    "html-minifier-terser": "^7.2.0",
    "js-yaml": "^4.1.0",
    "markdown-it": "^14.1.0",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-anchor": "^9.1.0",
    "markdown-it-eleventy-img": "^0.10.2",
    "markdown-it-emoji": "^3.0.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-mark": "^4.0.0",
    "markdown-it-prism": "^2.3.0",
    "netlify-plugin-cache": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.45",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-js": "^4.0.1",
    "prettier-plugin-jinja-template": "^1.5.0",
    "rimraf": "^6.0.1",
    "sanitize-html": "^2.13.0",
    "sharp": "^0.33.5",
    "sharp-ico": "^0.1.5",
    "slugify": "^1.6.6",
    "svgo": "^3.3.2"
  }
}
