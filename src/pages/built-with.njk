        <li class="grid-card | text-step-min-1">
          {% eleventyImage site.screenshot, site.name, null, "lazy", null, sizes, widths %}

          <p>{{ site.description }}</p>

          <p>
            <a href="{{ site.link }}">{{ site.link | replace("https://", "") }}</a>
          </p>
        </li>
